<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DropdownMenuStyle" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@drawable/rounded_button_devices</item>
    </style>

    <style name="ChangeMenuTextColor" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/gray_icons</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SaveMenuStyle" parent="Widget.Material3.PopupMenu">
        <item name="android:text">@color/green_icons</item>
    </style>


    <!--Dialog theme-->
    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MaterialAlertDialog.App.Body.Text" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/gray_icons</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>

</resources>
